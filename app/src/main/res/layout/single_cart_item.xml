<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="18dp"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="15dp"
        android:layout_marginTop="20dp">

        <!-- Round Image View for Food Image -->
        <ImageView
            android:id="@+id/foodImage"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ovalshape"/>

        <!-- Food Name, Description, and Price -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Short Food Description"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$10.99"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Quantity Counter Layout (Horizontal) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Decrement Button -->
                <Button
                    android:id="@+id/btnDecrement"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:backgroundTint="#3CB140"
                    android:text="\u2212"/>

                <!-- Quantity Display -->
                <TextView
                    android:id="@+id/textQuantity"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginLeft="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <!-- Increment Button -->
                <Button
                    android:id="@+id/btnIncrement"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:backgroundTint="#3CB140"
                    android:text="+"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_ic" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>